# This is an example file. Copy this to .env and fill in your actual values.
# DO NOT COMMIT the .env file to version control.

# --- Backend Go Server ---
DB_USER=postgres
DB_PASS=your-db-password
DB_NAME=pool_party
INSTANCE_CONNECTION_NAME=your-gcp-project:your-region:your-instance-name
SESSION_SECRET=a-long-random-string-for-session-security

# --- Shared Credentials ---
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_API_BASE=https://api-m.sandbox.paypal.com # Or https://api.paypal.com for production

# --- React App ---
REACT_APP_GOOGLE_CLIENT_ID=GOOGLE_CLIENT_ID
REACT_APP_PAYPAL_CLIENT_ID=PAYPAL_CLIENT_ID
